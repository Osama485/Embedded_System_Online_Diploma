#include <stdio.h>
#include <string.h>
int main()
{
	int arr[10], i, rev[10], n;
	printf("Enter Array size: ");
	fflush(stdout);
	scanf("%d", &n);

	printf("Enter Array Elements:  \n");
	fflush(stdout);
	for(i =0; i< n; i++)
		scanf("%d", &arr[i]);

	printf("the   real  Array is: ");
	for(i = 0; i < n; i++)
		printf("%d\t", arr[i]);

	printf("\nThe Reverse array is: ");
	for(i = n-1; i >= 0; i--)
		printf("%d\t", rev[i]);
	return 0;
}
