#include<stdio.h>

void Reverse()
{
	char c;
	scanf("%c", &c);

	if (c != '\n')
	{
		Reverse();
		printf("the reversed Sentence is: %c", c);
	}
}

int main()

{
	printf("Enter your sentence: ");
	fflush(stdout);
	Reverse();
	return 0;
}
