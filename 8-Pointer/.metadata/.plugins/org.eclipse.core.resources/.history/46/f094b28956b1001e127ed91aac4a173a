#include <stdio.h>
int main()
{
	int x = 10, y = 40;

	int *ptr, *ptr2;
	ptr = &x;
	printf("X = %d \t Ptr = %d \t y = %d\n", x, *ptr, y);

	*ptr = 50;
	printf("X = %d \t Ptr = %d\t y = %d\n", x, *ptr, y);

	ptr2 = &y;
	printf("X = %d \t Ptr = %d\t y = %d\n", x, *ptr2, y);

	return 0;
}
