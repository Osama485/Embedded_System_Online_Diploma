// simple calculator

#include<stdio.h>
int main()
{
	char sign;
	float n1, n2;
	printf("Enter Tow numbers to operate: ");
	fflush(stdin); fflush(stdout);
	scanf("%f %f", &n1, &n2);

	printf("chose operator(+, -, /, *)");
	switch(sign)
	{
	case '+':
		printf("sum = %f", (n1 + n2));
		break;
	case '-':
		printf("sub = %f", (n1 - n2));
		break;
	case '*':
		printf("multiplication = %f", (n1 * n2));
		break;
	case '/':
		printf("divide = %f", (n1 / n2));
		break;
	default:
		printf("Error chose....");
	}
}
