#include<stdio.h>

int main()
{
	char chose;
	float r, circum, area;
	printf("Enter radius: ");
	fflush(stdin); fflush(stdout);
	scanf("%f", &r);
	printf("chose a to print the area or chose b to print the circumstance: ");
	fflush(stdin); fflush(stdout);
	scanf("%c", &chose);

	switch(chose)
	{
		case 'a':
		case 'A':
		{
			area = 3.14 * r * r;
			printf("Area = %f", area);
		}
		break;

		case 'b':
		case 'B':
		{
			circum = 2 * 3.14 * r;
			printf("Circumstance %f = ", circum);
		}
		break;

		default:
			printf("dslkalnvsaofidnjkaDS/////////........\n");


	}
}
