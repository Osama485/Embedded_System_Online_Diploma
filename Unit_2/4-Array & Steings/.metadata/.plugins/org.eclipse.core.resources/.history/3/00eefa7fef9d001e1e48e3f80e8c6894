#include<stdio.h>
int main()
{
	int n, i;
	float average, sum, arr[];

	printf("Enter the number of elements: ");
	fflush(stdin); fflush(stdout);
	scanf("%d", &n);

	for(i=0; i<n; i++)
	{
		printf("number %d : ", i+1);
		fflush(stdin); fflush(stdout);
		scanf("%d", &arr[i]);
		sum+=arr[i];
	}
	average = sum/(i-1);
	printf("The Average of numbers = ", average);

}
