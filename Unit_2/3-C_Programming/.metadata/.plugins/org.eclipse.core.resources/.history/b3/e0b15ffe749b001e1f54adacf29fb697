#include<stdio.h>

int main()
{
	int n, sum = 0, i;
	float degree;
	printf("Enter number of students: ");
	fflush(stdin); fflush(stdout);
	scanf("%d", &n);
	for(i = 1; i <= n; i++)
	{
		printf("Student number (%d) degree:", i);
		fflush(stdin); fflush(stdout);
		scanf("%f", &degree);
		sum+=degree;
	}
	printf("Average = %d", sum/n);
}
