// Write C Program to Add Two Integers

#include <stdio.h>

int main()
{
	int n1, n2, sum;
	printf("Enter the first number: ");
	fflush(stdin); fflush(stdout);
	scanf("%d", &n1);
	printf("Enter the second number: ");
	scanf("%d", &n2);
	sum = n1 + n2;
	printf("Sum = %d ", sum);
}
