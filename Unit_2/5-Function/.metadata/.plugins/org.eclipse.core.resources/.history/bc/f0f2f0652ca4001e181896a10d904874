#include<stdio.h>

void Reverse()
{
	char c;
	scanf("%c", &c);

	if (c != '\n')
	{
		Reverse();
		printf("%c", c);
	}
}

int main()

{
	printf("Enter your sentence: ");
	fflush(stdout);
	char z = Reverse();
	printf("the reversed Sentence is : %s",z);
	return 0;
}
